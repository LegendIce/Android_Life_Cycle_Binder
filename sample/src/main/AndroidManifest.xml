<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.foji.android.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="me.foji.android.sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BindedActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".BindedFragmentActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".BindedSupportFragmentActivity"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>